# ============================================
# TradeMaster - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# ---- App ----
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# ---- Binance API ----
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# ---- Database ----
DATABASE_URL=postgresql+asyncpg://trademaster:trademaster@localhost:5432/trademaster
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ---- Redis ----
REDIS_URL=redis://localhost:6379/0

# ---- JWT ----
JWT_SECRET_KEY=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ---- Trading ----
TRADING_SYMBOLS=BTCUSDT,ETHUSDT
TRADING_MAX_RISK_PER_TRADE=0.02
TRADING_MAX_PORTFOLIO_EXPOSURE=0.60
TRADING_MAX_SINGLE_ASSET_EXPOSURE=0.30
TRADING_MAX_DAILY_DRAWDOWN=0.03
TRADING_MAX_WEEKLY_DRAWDOWN=0.07
TRADING_MAX_TOTAL_DRAWDOWN=0.15
